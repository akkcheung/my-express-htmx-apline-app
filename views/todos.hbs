<form id="new-todo-form">
	<input id="new-todo-input" name="todo" action="/todos" placeholder='What needs to be done?' 
		autofocus 
		hx-target="#todo-list"	
		hx-swap="beforeend"
		hx-post="/todos"
		hx-trigger="keyup[key=='Enter']"
	>
</form>

