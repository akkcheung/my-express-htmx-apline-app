<ul id="todo-list" class="todo-list">
{{#if todos}}
{{#each todos }}
	{{>todo-item todo=this}}
{{/each}}
{{/if}}
</ul>

<div id="main-footer" class="">
<span
	id="items-count"
	hx-get="/items-count"
	hx-trigger="itemAdded from:body, itemCompletionToggled from:body, itemDeleted from:body"
>	
	{{>items-count count=count}}
</span>
</div>

